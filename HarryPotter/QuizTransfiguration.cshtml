@{
    Page.Title = "Transfiguration";
    Layout = "~/Shared/_DefaultPageAuthOnly.cshtml";

}

<!--A transfiguration Quiz with a submit button to submit the answers -->
<form method="post">
    <h1 class="harry-font">Quiz Transfiguration 1 </h1>
    <div id="quiz">
        <p><h3>Take the quiz and see if you're a real wizard!</h3></p>
        <p>
            <br />

            <img src="https://vignette.wikia.nocookie.net/harrypotter/images/7/72/MouseToSnuffbox.jpg/revision/latest?cb=20170204072349" alt="Screaming Mandrake" style="float:right;width:300px;height:180px;margin:15px" />

            Question 1:<br />
            Which object can’t be transfigured?<br />
            <input type="radio" id="radioButton" value="wrong" name="vraag1">&nbsp;&nbsp;A dragon<br />
            <input type="radio" id="radioButton" value="wrong" name="vraag1">&nbsp;&nbsp;A statue<br />
            <input type="radio" id="radioButton" value="correct" name="vraag1">&nbsp;&nbsp;A dead person<br />
            <input type="radio" id="radioButton" value="wrong" name="vraag1">&nbsp;&nbsp;A living person<br />
        </p>
        <p>
            Question 2:<br />
            Which of these statements is false?<br />
            <input type="radio" id="radioButton" value="wrong" name="vraag2">&nbsp;&nbsp; You cannot conjure food
            <br />
            <input type="radio" id="radioButton" value="correct" name="vraag2">&nbsp;&nbsp; Conjured objects last forever<br />
            <input type="radio" id="radioButton" value="wrong" name="vraag2">&nbsp;&nbsp;If transfiguration is done improperly you can become permanently stuck in one state, whether it be fully or partially transfigured.<br />
            <input type="radio" id="radioButton" value="wrong" name="vraag2">&nbsp;&nbsp; The branch of conjuration referred to as ‘’vanishment’’ is completely unrestricted and has no limits placed upon it.<br />
        </p>
        <p>
            Question 3:<br />
            The correct order of difficulty of the main four transfiguration branches goes as follows: (left is easiest, right is most difficult)<br />
            <input type="radio" id="radioButton" value="correct" name="vraag3">&nbsp;&nbsp;Transformation, Untransfiguration Vanishment, Conjuration
            <br />
            <input type="radio" id="radioButton" value="wrong" name="vraag3">&nbsp;&nbsp;Conjuration, Vanishment, Transformation, Untransfiguration<br />
            <input type="radio" id="radioButton" value="wrong" name="vraag3">&nbsp;&nbsp;Transformation, Untransfiguration Conjuration, Vanishment<br />
            <input type="radio" id="radioButton" value="wrong" name="vraag3">&nbsp;&nbsp;Untransfiguration, Conjuration, Vanishment, Transformation<br />
        </p>
        <p>
            Question 4:<br />
            ’Reparifarge’’ is a spell that falls under:<br />
            Which object can’t be transfigured?<br />
            <input type="radio" id="radioButton" value="wrong" name="vraag4">&nbsp;&nbsp;Transfiguration<br />
            <input type="radio" id="radioButton" value="wrong" name="vraag4">&nbsp;&nbsp;Conjuration<br />
            <input type="radio" id="radioButton" value="correct" name="vraag4">&nbsp;&nbsp;Untransfiguration<br />
            <input type="radio" id="radioButton" value="wrong" name="vraag4">&nbsp;&nbsp;Vanishment<br />
        </p>
        <p>
            Question 5:<br />
            The difficulty of vanisment correlates to:<br />
            <input type="radio" id="radioButton" value="wrong" name="vraag5">&nbsp;&nbsp;The size of the object<br />
            <input type="radio" id="radioButton" value="correct" name="vraag5">&nbsp;&nbsp;The complexity of the object<br />
            <input type="radio" id="radioButton" value="wrong" name="vraag5">&nbsp;&nbsp;The weight of the object<br />
            <input type="radio" id="radioButton" value="wrong" name="vraag5">&nbsp;&nbsp;The intelligence of the object <br />
        </p>
        <p>
            Question 6:<br />
            You cast vanisment using the incantation:<br />
            <input type="radio" id="radioButton" value="wrong" name="vraag6">&nbsp;&nbsp;Accio<br />
            <input type="radio" id="radioButton" value="correct" name="vraag6">&nbsp;&nbsp;Evanesco<br />
            <input type="radio" id="radioButton" value="wrong" name="vraag6">&nbsp;&nbsp;Alarte Ascendare<br />
            <input type="radio" id="radioButton" value="wrong" name="vraag6">&nbsp;&nbsp;Ventus<br />
        </p>
        <p>
            Question 7:<br />
            Conjuration is the exact opposite of vanishment<br />
            <input type="radio" id="radioButton" value="correct" name="vraag7">&nbsp;&nbsp;True<br />
            <input type="radio" id="radioButton" value="wrong" name="vraag7">&nbsp;&nbsp;False<br />

        </p>
        <p>
            Question 8:<br />
            Transfiguration lessons take place in classroom:<br />
            <input type="radio" id="radioButton" value="correct" name="vraag8">&nbsp;&nbsp;1,34,99,1B<br />
            <input type="radio" id="radioButton" value="wrong" name="vraag8">&nbsp;&nbsp; 1,35,80,2B<br />
            <input type="radio" id="radioButton" value="wrong" name="vraag8">&nbsp;&nbsp;33, 20, 1C<br />
            <input type="radio" id="radioButton" value="wrong" name="vraag8">&nbsp;&nbsp;33, 22,99, 2D<br />
        </p>
        <br />
        <br />
        <button type="submit" id="submitbutton" class="btn btn-secondary" style="color:black"> &nbsp; SUBMIT &nbsp;  </button>
    </div>

    @{
        /*Results  will only shown if none of the radiobutton groups have a value of null.
        If thats the case, the variable "score" will increase by 1 for each radiobutton value of ''correct''
        Pressing submit will hide the quiz, display the quiz results and show a button to return to lesson overview
        */
        var kek = 1;
        double score = 0;
        if (Request["vraag1"] == null || Request["vraag2"] == null || Request["vraag3"] == null || Request["vraag4"] == null || Request["vraag5"] == null)
        { kek -= 1; }
        else
        {

            if (Request["vraag1"] == "correct") { score += 1; }
            if (Request["vraag2"] == "correct") { score += 1; }
            if (Request["vraag3"] == "correct") { score += 1; }
            if (Request["vraag4"] == "correct") { score += 1; }
            if (Request["vraag5"] == "correct") { score += 1; }
            if (Request["vraag6"] == "correct") { score += 1; }
            if (Request["vraag7"] == "correct") { score += 1; }
            if (Request["vraag8"] == "correct") { score += 1; }
        }

        double procentgoed = score / 8 * 100;

        if (procentgoed >= 55)
        {
            User user = UserController.GetUserById(AuthController.LoginId);
            House house = HouseController.GetHouseById(user.House);

            int points = 1;

            if (procentgoed > 75)
            {
                points++;
            }

            if (procentgoed > 90)
            {
                points++;
            }

            HouseController.IncrementMemberPoints(house, points);
            UserController.IncrementUserPoints(user, points);
        }

        if (kek == 0)
        { <p> Be sure to fill in everything!</p>}
        else
        {
            <p>You answered @score/8 (@procentgoed%) of the questions correctly</p> if (procentgoed >= 55)
            { <P>Good job!</P>}
            else
            {<p>Better luck next time! </p>}


            <a href="~/LesOverzicht.cshtml"><p>Click here to go back to Lesson overview</p></a>

            <style>
                #quiz {
                    display: none
                }
            </style>
        }
    }
</form>`